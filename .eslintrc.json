{
  "extends": "next/core-web-vitals",
  "rules": {
    "linebreak-style": ["warn", "unix"],
    "sort-imports": [
      "warn",
      {
        "ignoreCase": true,
        "ignoreDeclarationSort": true
      }
    ],
    "import/order": [
      "warn",
      {
        "newlines-between": "always",
        "groups": ["external", "builtin", "internal", "sibling", "parent", "index"]
      }
    ]
  }
}
